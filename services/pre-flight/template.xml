<requirements>
    <requirement-map name="Flight zone" safetyzoneSize="50"/>
    <requirement-text name="Pilot name"/>
    <requirement-text name="Flight height" default="100"/>
    <requirement-choice name="Flight mode">
        <choice name="Open"/>

        <choice name="Specified">
            <requirement-checkbox name="SORA needed">
                <requirement-supply-file name="SORA"/>
            </requirement-checkbox>

            <requirement-supply-file name="Police approval"/>
            <requirement-supply-file name="Land owner permit"/>
        </choice>

        <choice name="Certified">
        </choice>
    </requirement-choice>

    <requirement-choice name="Old flight mode">
        <choice name="Country zone"/>
        <choice name="City zone"/>
    </requirement-choice>

    <requirement-choice name="Drone type">
        <choice name="Type 1">
            <requirement-supply-file name="Test"/>
        </choice>

        <choice name="Type 2">
            <requirement-supply-file name="Test2"/>
        </choice>
    </requirement-choice>

</requirements>